<config>
    <modules>
        <MageStack_Sentry>
            <version>1.0.0</version>
            <depends/>
        </MageStack_Sentry>
    </modules>
    <global>
        <models>
            <magestack.sentry>
                <class>MageStack_Sentry_Model</class>
            </magestack.sentry>
        </models>
        <helpers>
            <magestack.sentry>
                <class>MageStack_Sentry_Helper</class>
            </magestack.sentry>
        </helpers>
        <events>
            <controller_front_init_before>
                <observers>
                    <magestack.sentry>
                        <type>singleton</type>
                        <class>magestack.sentry/observer</class>
                        <method>init</method>
                    </magestack.sentry>
                </observers>
            </controller_front_init_before>
        </events>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <MageStack_Sentry before="Mage_Adminhtml">MageStack_Sentry_Adminhtml</MageStack_Sentry>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <magestack.sentry>
                    <file>magestack_sentry.xml</file>
                </magestack.sentry>
            </updates>
        </layout>
        <acl>
            <resources>
                <admin>
                    <children>
                        <magestack.sentry>
                            <title>MageStack</title>
                            <sort_order>10</sort_order>
                        </magestack.sentry>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <magestack.sentry>
                                            <title>Sentry Options</title>
                                        </magestack.sentry>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>